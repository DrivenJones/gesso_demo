<%- model_class = Jewel -%>
<div class="page-header">
  <h1><%=t '.title', :default => Jewel %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:color) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:jewel_name) %></th>
      <th><%= model_class.human_attribute_name(:jewel_description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @jewels.each do |jewel| %>
      <tr>
        <td><%= jewel.id %></td>
        <td><%= jewel.color %></td>
        <td><%= jewel.price %></td>
        <td><%= jewel.weight %></td>
        <td><%= jewel.jewel_name %></td>
        <td><%= jewel.jewel_description %></td>
        <td><%=l jewel.created_at, format: :long %></td>
        <td>
          <%= link_to jewel_path(jewel), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to jewel_path(jewel), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_jewel_path,
            :class => 'btn btn-primary' %>
