<%- model_class = Jewel -%>
<div class="page-header">
  <h1><%=t '.title', :default => Jewel %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:color) %></dt>
      <dd><pre class="prettyprint"><%= @jewel.color %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:price) %></dt>
      <dd><pre class="prettyprint"><%= @jewel.price %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:weight) %></dt>
      <dd><pre class="prettyprint"><%= @jewel.weight %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:jewel_name) %></dt>
      <dd><pre class="prettyprint"><%= @jewel.jewel_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:jewel_description) %></dt>
      <dd><pre class="prettyprint"><%= @jewel.jewel_description %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              jewels_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_jewel_path(@jewel), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              jewel_path(@jewel),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

